# ===========================================
# Dexa App - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# -------------------------------------------
# PostgreSQL
# -------------------------------------------
POSTGRES_USER=dexa
POSTGRES_PASSWORD=dexa_secret
POSTGRES_DB=dexa_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# -------------------------------------------
# Apache Kafka & Zookeeper
# -------------------------------------------
KAFKA_BROKERS=localhost:9092
KAFKA_PORT=9092
ZOOKEEPER_PORT=2181
KAFKA_TOPIC_EMPLOYEE_AUDIT=employee.audit

# -------------------------------------------
# Redis (Employee list & profile cache, 1h expiry)
# -------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}
REDIS_CACHE_TTL=3600

# -------------------------------------------
# JWT Authentication
# -------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# -------------------------------------------
# Cloudinary (Photo upload)
# -------------------------------------------
CLOUDINARY_CLOUD_NAME=dtgum1dl1
CLOUDINARY_API_KEY=197215466978832
CLOUDINARY_API_SECRET=secret_key_here

# -------------------------------------------
# Application
# -------------------------------------------
NODE_ENV=development
API_PORT=3000
FRONTEND_URL=http://localhost:5173

# For Frontend (Vite) - create apps/frontend/.env
# VITE_API_URL=http://localhost:3000
